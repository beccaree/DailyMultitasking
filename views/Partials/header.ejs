<header id="header">
    <!-- collapse menu button -->
    <div id="hide-menu" class="btn-header">

    </div>
    <!-- end collapse menu -->
    <div id="logo-group" class="pull-left">
        <!--span> <a href="javascript:void(0);" data-action="toggleMenu" title="Collapse Menu"><i class="fa fa-reorder"></i></a> </span-->
        <h2 id="logo" class="txt-color-white">TaskRacer</h2>
    </div>

    <div id="tab-icons" class="pull-center">
        <ul class="list-inline">
            <li id="homeTab" class="active tab-item"><a class="tab-icon-item" href="/" onclick="switchTab(this, true)" data-toggle="tooltip" data-placement="bottom"
                    title="Task Manager"><i class="glyphicon glyphicon-calendar"></i></a></li>
            <li id="progressTab" class="tab-item" style="padding-left:0;"><a class="tab-icon-item" onclick="switchTab(this, false)" href="/progress" data-toggle="tooltip" data-placement="bottom"
                    title="Progress"><i class="glyphicon glyphicon-stats"></i></a></li>
        </ul>
    </div>
    <!-- pulled right: nav area -->
    <div class="pull-right">
        <span class="font-xs txt-color-white">Task</span>
        <div class="easy-pie-chart txt-color-green easyPieChart" data-percent="86" data-pie-size="40">
            <span class="percent percent-sign font-xs txt-color-white">86</span>
        </div>

    </div>
    <!-- end pulled right: nav area -->

</header>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });

    if ('<%= currentPage %>' === "main") {
        $('#homeTab').addClass("active");
        $('#progressTab').removeClass("active");
    } else {
        $('#homeTab').removeClass("active");
        $('#progressTab').addClass("active");
    }
</script>